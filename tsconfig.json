{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "rootDir": "./src",
        "lib": [
            "es2015",
            "es5",
            "dom",
            "scripthost"
        ]
    },
    "include": [
        "src"
    ]
}